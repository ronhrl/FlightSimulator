            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.65"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
